<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:text="27°C"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="63.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tempteratureTextView"
        android:layout_marginLeft="10.0dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="63.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="10:00:00"
            android:textAlignment="viewEnd"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clockTextView"
            android:layout_marginRight="10dp" />



        <com.google.android.flexbox.FlexboxLayout
            android:orientation="horizontal"
            android:layout_marginTop="70.0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="50dp"
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="#202225"
                android:id="@+id/button1" />

            <TextView
                android:text="100.1MHz"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView1"
         />
            <Button
                android:layout_marginRight="50dp"
                android:text="+"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                app:backgroundTint="#202225" />

        </com.google.android.flexbox.FlexboxLayout>
        <SeekBar
            android:maxHeight="100px"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:progress="0"
            android:max="205"
            android:id="@+id/seekBar1"
            android:thumbTint="#202225"
            android:progressBackgroundTint="@android:color/background_dark"
            android:progressTint="@android:color/darker_gray"
            android:layout_marginTop="39.5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="150.0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="10:00:00"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/clockButton1"
                android:layout_marginRight="0.0dp"
                android:layout_marginLeft="33.0dp"
                android:textAlignment="center"
                android:backgroundTint="#ff4b4b4b" />
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clockSwitch1"
                android:layout_marginRight="33.0dp"
                android:thumbTint="#ff555555"/>
        </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="29.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <Button
                android:text="10:00:00"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/clockButton2"
                android:layout_marginRight="0.0dp"
                android:layout_marginLeft="33.0dp"
                android:textAlignment="center"
                android:backgroundTint="#ff4b4b4b" />
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clockSwitch2"
                android:layout_marginRight="33.0dp"
                android:thumbTint="#ff555555"/>
         </LinearLayout>
                <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="29.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <Button
                android:text="10:00:00"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/clockButton3"
                android:layout_marginRight="0.0dp"
                android:layout_marginLeft="33.0dp"
                android:textAlignment="center"
                android:backgroundTint="#ff4b4b4b" />
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clockSwitch3"
                android:layout_marginRight="33.0dp"
                android:thumbTint="#ff555555"/>

         </LinearLayout>
                <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="29.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <Button
                android:text="10:00:00"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/clockButton4"
                android:layout_marginRight="0.0dp"
                android:layout_marginLeft="33.0dp"
                android:textAlignment="center"
                android:backgroundTint="#ff4b4b4b" />
            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clockSwitch4"
                android:layout_marginRight="33.0dp"
                android:thumbTint="#ff555555"/>
         </LinearLayout>
        <TextView
            android:text="© Made by René Kubic 2024"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="37.0dp" />


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
